@model IEnumerable<Practice_MVC_class6.Models.PopsciclesOrder>

<h2>Popscicle Order Admin Page</h2>
<p>There are @Model.Count() orders</p>

<table border="1">
    <tr>
        <th>Customer</th>
        <th>Flavour</th>
        <th>Quantity</th>
        <th>Subtotal</th>
        <th>HST</th>
        <th>Total</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.CustomerName</td>
            <td>@order.IceCreamFlavour</td>
            <td>@order.NumPopscicles</td>
            <td>@order.SubTotal</td>
            <td>@order.HstAmt</td>
            <td>@order.OrderTotal</td>
        </tr>
    }
</table>
